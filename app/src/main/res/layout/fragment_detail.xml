<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_detail"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#009688"
    tools:context="com.first.android.moviedatabase.DetailActivityFragment">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/movie_poster"/>
    <TextView
        android:id="@+id/director_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Director:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/released_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/director_text"
        android:text="Released:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/runtime_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/released_text"
        android:text="Runtime:"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/genre_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/runtime_text"
        android:text="Genre:"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/plot_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/genre_text"
        android:text="Plot:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plot_value"
        android:layout_toRightOf="@id/plot_text"
        android:layout_toEndOf="@id/plot_text"
        android:layout_below="@id/genre_text"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/votes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plot_value"
        android:text="Votes:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/votes_text"
        android:layout_margin="8dp"
        android:text="Rating"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/director_value"
        android:layout_toRightOf="@id/director_text"
        android:layout_toEndOf="@id/director_text"
        android:layout_toLeftOf="@id/movie_poster"
        android:layout_toStartOf="@id/movie_poster"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/released_value"
        android:layout_toRightOf="@id/released_text"
        android:layout_toEndOf="@id/released_text"
        android:layout_toLeftOf="@id/movie_poster"
        android:layout_toStartOf="@id/movie_poster"
        android:layout_below="@id/director_text"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/runtime_value"
        android:layout_toRightOf="@id/runtime_text"
        android:layout_toEndOf="@+id/runtime_text"
        android:layout_toLeftOf="@id/movie_poster"
        android:layout_toStartOf="@id/movie_poster"
        android:layout_below="@id/released_text"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genre_value"
        android:layout_toRightOf="@id/genre_text"
        android:layout_toEndOf="@id/genre_text"
        android:layout_toLeftOf="@id/movie_poster"
        android:layout_toStartOf="@id/movie_poster"
        android:layout_below="@id/runtime_text"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/votes_value"
        android:layout_toRightOf="@id/votes_text"
        android:layout_toEndOf="@id/votes_text"
        android:layout_below="@id/plot_value"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating_value"
        android:layout_toRightOf="@id/rating_text"
        android:layout_toEndOf="@id/rating_text"
        android:layout_below="@id/votes_value"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"/>
</RelativeLayout>
